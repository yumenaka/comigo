package plugins

import (
	"github.com/labstack/echo/v4"
	"github.com/yumenaka/comigo/config"
)

// ComigoXYZPlugin 在书架底部添加软件项目首页功能块。需要限定域名的时候：(c.Request().Host == "comigo.xyz" || strings.HasSuffix(c.Request().Host, ".comigo.xyz"))
// x-init="$nextTick(() => { $el.value = selectedIndex; })" 确保：使用 $nextTick 等待 Alpine.js 完成所有 DOM 更新（包括 x-for 生成的选项）在下一个渲染周期中强制设置 select 元素的值  这样可以保证选项已经生成后再设置默认选中值
templ ComigoXYZPlugin(c echo.Context) {
	if config.GetCfg().EnablePlugin && config.GetCfg().IsPluginEnabled("comigo_xyz") && c.Param("id") == "" {
		if config.GetCfg().Debug {
			<script>
				console.log("Comigo.xyz plugin enabled");
			</script>
		}
		<!-- 版本号数据，通过 data 属性传递 -->
		<div id="comigo-xyz-plugin-data" data-version={ config.GetVersion() } style="display: none;"></div>
		<script>
			// 等待页面加载完成后在书架底部插入主页功能块
			let retryCount = 0;
			const maxRetries = 50; // 最多重试5秒（50 * 100ms）

			function insertHomePageBlock() {
				const shelfMainArea = document.getElementById("ShelfMainArea");
				if (!shelfMainArea) {
					// 如果 ShelfMainArea 还不存在，延迟重试
					retryCount++;
					if (retryCount < maxRetries) {
						setTimeout(insertHomePageBlock, 100);
					} else {
						console.warn(
							"Comigo.xyz插件: ShelfMainArea 未找到，可能当前页面没有书籍",
						);
					}
					return;
				}

				// 检查是否已经插入过
				if (shelfMainArea.querySelector(".comigo_xyz_plugin")) {
					return;
				}

				// 从 data 属性获取版本号
				const dataElement = document.getElementById("comigo-xyz-plugin-data");
				const version = dataElement
					? dataElement.getAttribute("data-version") || "v1.0.0"
					: "v1.0.0";

				// 设置页面标题
				document.title = i18next.t("comigo_xyz_subtitle");
				document.metaDescription = i18next.t("comigo_xyz_description");
				const HeaderTextElement = document.getElementById("headerTitle");
				if (HeaderTextElement) {
					HeaderTextElement.textContent = i18next.t("comigo_xyz_subtitle");
				}

				// 固定代理域名
				const proxyBase = "https://comigo.xyz";
				//const proxyBase = "http://127.0.0.1:1234";

				// 检测操作系统（只判断 OS，架构根据 OS 默认设置）
				function detectSystem() {
					const userAgent = navigator.userAgent;
					let os = "Linux";
					let arch = "x86_64";

					// 按优先级检测操作系统（参考 getUserOsInfo 逻辑）
					if (userAgent.indexOf("Windows NT") !== -1) {
						os = "Windows";
						arch = "x86_64";
					} else if (userAgent.indexOf("Mac") !== -1) {
						os = "MacOS";
						arch = "arm64";
					} else if (userAgent.indexOf("Linux") !== -1) {
						os = "Linux";
						arch = "x86_64";
					} else if (userAgent.indexOf("X11") !== -1) {
						os = "Linux";
						arch = "x86_64";
					} else if (userAgent.indexOf("Android") !== -1) {
						os = "Linux";
						arch = "x86_64";
					} else if (
						userAgent.indexOf("iPhone") !== -1 ||
						userAgent.indexOf("iPad") !== -1
					) {
						os = "MacOS";
						arch = "arm64";
					}
					return { os, arch };
				}

				// 平台选项（包含托盘版本和命令行版本）
				const platforms = [
					// Windows 托盘版本（默认）
					{
						os: "Windows",
						arch: "x86_64",
						type: "tray",
						label: "Windows x86_64 (托盘版)",
					},
					// MacOS 托盘版本（默认，兼容 arm64 和 x86_64）
					{
						os: "MacOS",
						arch: "universal",
						type: "tray",
						label: "MacOS (托盘版)",
					},
					{
						os: "MacOS",
						arch: "arm64",
						type: "cli",
						label: "MacOS arm64 (命令行)",
					},
					{
						os: "MacOS",
						arch: "x86_64",
						type: "cli",
						label: "MacOS x86_64 (命令行)",
					},
					{
						os: "Windows",
						arch: "x86_64",
						type: "cli",
						label: "Windows x86_64 (命令行)",
					},
					// Linux 只有命令行版本
					{
						os: "Linux",
						arch: "x86_64",
						type: "cli",
						label: "Linux x86_64 (命令行)",
					},
					{
						os: "Linux",
						arch: "arm64",
						type: "cli",
						label: "Linux arm64 (命令行)",
					},
					{
						os: "Linux",
						arch: "arm",
						type: "cli",
						label: "Linux arm (命令行)",
					},
				];

				// 检测当前系统并选择默认平台
				const currentSystem = detectSystem();
				let defaultIndex = 0;

				if (currentSystem.os === "Windows") {
					// Windows 默认选择托盘版
					defaultIndex = platforms.findIndex(
						(p) =>
							p.os === "Windows" &&
							p.arch === currentSystem.arch &&
							p.type === "tray",
					);
				} else if (currentSystem.os === "MacOS") {
					// MacOS 默认选择托盘版（通用版本，不区分架构）
					defaultIndex = platforms.findIndex(
						(p) => p.os === "MacOS" && p.type === "tray",
					);
				} else {
					// Linux 默认选择命令行版
					defaultIndex = platforms.findIndex(
						(p) =>
							p.os === "Linux" &&
							p.arch === currentSystem.arch &&
							p.type === "cli",
					);
				}

				// 如果找不到匹配的，使用第一个
				const selectedIndex = defaultIndex >= 0 ? defaultIndex : 0;
				//console.log(`Comigo.xyz插件: 检测到系统 ${currentSystem.os} ${currentSystem.arch}，默认选择平台索引 ${selectedIndex}`,);
				// 创建主页功能块
				const homePageBlock = document.createElement("div");
				homePageBlock.className = "comigo_plugin comigo_xyz_plugin w-full mt-2";
				homePageBlock.setAttribute(
					"x-data",
					`{
					selectedIndex: ${selectedIndex},
					platforms: ${JSON.stringify(platforms)},
					version: ${JSON.stringify(version)},
					proxyBase: ${JSON.stringify(proxyBase)},
					copiedIndex: -1,
					get selectedPlatform() {
						return this.platforms[this.selectedIndex] || this.platforms[0];
					},
					getDownloadUrl() {
						const platform = this.selectedPlatform;
						let filename = "";

						if (platform.type === "tray") {
							// 托盘版本
							if (platform.os === "Windows") {
								// Windows 托盘版：comigo_v{version}_Windows_x86_64_full.zip
								filename = \`comigo_\${this.version}_Windows_x86_64_full.zip\`;
							} else if (platform.os === "MacOS") {
								// MacOS 托盘版：Comigo.app.zip
								filename = \`Comigo.app.zip\`;
							}
						} else {
							// 命令行版本：comi_v{version}_{OS}_{ARCH}.tar.gz
							filename = \`comi_\${this.version}_\${platform.os}_\${platform.arch}.tar.gz\`;
						}
						return \`\${this.proxyBase}/yumenaka/comigo/releases/download/\${this.version}/\${filename}\`;
					},
					async copyToClipboard(text, index) {
						try {
							await navigator.clipboard.writeText(text);
							this.copiedIndex = index;
							setTimeout(() => {
								this.copiedIndex = -1;
							}, 2000);
						} catch (err) {
							console.error('复制失败:', err);
						}
					}
				}`,
				);

				homePageBlock.innerHTML = `
					<div class="flex mt-[-16px] flex-col items-center bg-base-200 border justify-center w-full p-8 rounded-lg">
						<div class="max-w-4xl w-full space-y-8">
							<!-- 标题区域 -->
							<div class="text-center space-y-4">
								<p class="text-base text-base-content dark:text-white" x-text="i18next.t('comigo_xyz_description')">在所有设备上看漫画。无论电脑还是手机，Windows还是Linux、MacOS</p>
							</div>
							<!-- 下载区域 -->
							<div class="flex flex-col md:flex-row justify-center items-center gap-4 mt-6">
								<div class="flex flex-col md:flex-row items-center gap-2">
									<select
										x-model.number="selectedIndex"
										x-init="$nextTick(() => { $el.value = selectedIndex; })"
										class="px-4 py-3 border bg-base-100 border rounded-lg text-base-content focus:outline-none focus:ring-2 focus:ring-primary"
									>
										<template x-for="(platform, index) in platforms" :key="index">
											<option :value="index" x-text="platform.label"></option>
										</template>
									</select>
									<a
										:href="getDownloadUrl()"
										target="_blank"
										class="px-6 py-3 border bg-green-500 text-black dark:text-white rounded-lg font-semibold"
									>
										<span x-text="i18next.t('comigo_xyz_download')">⬇️ 下载</span>
									</a>
								</div>
							</div>
							<!-- 一键安装命令行版 -->
							<div class="mt-8">
								<p class="w-full text-base-content dark:text-white text-left mb-2" x-text="i18next.t('comigo_xyz_cli_install_title')">一键安装命令行版：</p>
								<div class="space-y-3">
									<!-- 第一个代码块 -->
									<div class="bg-black relative border border-gray-500 dark:border-gray-200  rounded-lg p-4">
										<pre class="text-sm text-white font-mono overflow-x-auto mb-0"><code class="w-full h-full text-center">bash &lt;(curl -s https://comigo.xyz/get.sh)</code></pre>
										<button
											@click="copyToClipboard('bash <(curl -s https://comigo.xyz/get.sh)', 0)"
											class="absolute top-2 right-2 p-2 text-base-content/70 dark:text-base-content/80 hover:text-base-content dark:hover:text-white transition-colors"
											:title="copiedIndex === 0 ? i18next.t('comigo_xyz_cli_install_copied') : i18next.t('comigo_xyz_cli_install_copy')"
										>
											<svg x-show="copiedIndex !== 0" class="w-5 h-5" fill="none" stroke="white" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
											</svg>
											<svg x-show="copiedIndex === 0" class="w-5 h-5 text-green-500" fill="none" stroke="white" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
											</svg>
										</button>
									</div>
									<!-- 第二个代码块 -->
									<p class="w-full text-base-content dark:text-white text-left mb-2" x-text="i18next.t('comigo_xyz_cli_install_cn_desc')">中国大陆用户推荐：</p>
									<div class="bg-black relative border border-gray-500 dark:border-gray-200  rounded-lg p-4">
										<pre class="text-sm text-white font-mono overflow-x-auto mb-0"><code>bash &lt;(curl -s https://comigo.xyz/get.sh) --cn</code></pre>
										<button
											@click="copyToClipboard('bash <(curl -s https://comigo.xyz/get.sh) --cn', 1)"
											class="absolute top-2 right-2 p-2 text-base-content/70 dark:text-base-content/80 hover:text-base-content dark:hover:text-white transition-colors"
											:title="copiedIndex === 1 ? i18next.t('comigo_xyz_cli_install_copied') : i18next.t('comigo_xyz_cli_install_copy')"
										>
											<svg x-show="copiedIndex !== 1" class="w-5 h-5" fill="none" stroke="white" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
											</svg>
											<svg x-show="copiedIndex === 1" class="w-5 h-5 text-green-500" fill="none" stroke="white" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
											</svg>
										</button>
									</div>
								</div>
							</div>
							<!-- 功能特性 - 使用数据驱动方式生成 -->
							<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-6" id="features-grid">
							</div>
							<!-- 使用说明 -->
							<div class="mt-12 bg-base-100 p-6 rounded-lg shadow-lg border border-gray-500 dark:border-gray-200">
								<h2 class="text-2xl font-semibold mb-4 text-base-content dark:text-white" x-text="i18next.t('comigo_xyz_quick_start')">快速开始</h2>
								<ol class="list-decimal list-inside space-y-2 text-base-content dark:text-white">
									<li x-text="i18next.t('comigo_xyz_quick_start_step1')">下载并运行 Comigo 程序</li>
									<li x-text="i18next.t('comigo_xyz_quick_start_step2')">配置您的书库路径</li>
									<li x-text="i18next.t('comigo_xyz_quick_start_step3')">开始享受阅读！</li>
								</ol>
							</div>
							<!-- GitHub 项目链接 -->
							<div class="mt-8 flex justify-center">
								<a
									href="https://github.com/yumenaka/comigo"
									target="_blank"
									rel="noopener noreferrer"
									class="inline-flex items-center gap-2 px-6 py-3 bg-gray-800 hover:bg-gray-700 text-white rounded-lg font-semibold transition-colors"
								>
									<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
										<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
									</svg>
									<span x-text="i18next.t('comigo_xyz_github_button')">访问 GitHub 项目</span>
								</a>
							</div>
						</div>
					</div>
				`;

				// 功能特性数据 - 方便维护和扩展
				const features = [
					{
						title: "comigo_xyz_feature_format",
						desc: "comigo_xyz_feature_format_desc",
					},
					{
						title: "comigo_xyz_feature_cross_platform",
						desc: "comigo_xyz_feature_cross_platform_desc",
					},
					{
						title: "comigo_xyz_feature_responsive",
						desc: "comigo_xyz_feature_responsive_desc",
					},
					{
						title: "comigo_xyz_feature_reading_modes",
						desc: "comigo_xyz_feature_reading_modes_desc",
					},
					{
						title: "comigo_xyz_feature_plugin",
						desc: "comigo_xyz_feature_plugin_desc",
					},
					{
						title: "comigo_xyz_feature_media",
						desc: "comigo_xyz_feature_media_desc",
					},
					{
						title: "comigo_xyz_feature_download",
						desc: "comigo_xyz_feature_download_desc",
					},
					{
						title: "comigo_xyz_feature_history",
						desc: "comigo_xyz_feature_history_desc",
					},
					{
						title: "comigo_xyz_feature_security",
						desc: "comigo_xyz_feature_security_desc",
					},
				];

				// 动态生成功能特性卡片
				const featuresGrid = homePageBlock.querySelector("#features-grid");
				if (featuresGrid) {
					features.forEach((feature) => {
						const card = document.createElement("div");
						card.className =
							"bg-base-100 p-6 rounded-lg shadow-lg border border-gray-500 dark:border-gray-200";
						card.innerHTML =
							'<h3 class="text-xl font-semibold mb-2 text-base-content dark:text-white">' +
							i18next.t(feature.title) +
							"</h3>" +
							'<p class="text-base-content dark:text-white">' +
							i18next.t(feature.desc) +
							"</p>";
						featuresGrid.appendChild(card);
					});
				}

				// 在书架底部插入主页功能块
				shelfMainArea.appendChild(homePageBlock);

				// 初始化Alpine.js（如果还没有初始化）
				if (typeof Alpine !== "undefined") {
					Alpine.initTree(homePageBlock);
				} else {
					// 如果 Alpine 还没加载，等待加载完成
					document.addEventListener("alpine:init", () => {
						Alpine.initTree(homePageBlock);
					});
				}
			}

			// 页面加载完成后执行
			if (document.readyState === "loading") {
				document.addEventListener("DOMContentLoaded", insertHomePageBlock);
			} else {
				// DOM 已经加载完成，直接执行
				insertHomePageBlock();
			}
		</script>
		<style>
			/* 确保主页功能块样式正确显示 */
			.comigo_plugin {
				overflow: visible !important;
			}
		</style>
	}
}
